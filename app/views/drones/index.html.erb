<div class="container">
  <div style="margin-top: 10px;margin-bottom: 10px;float: right;">
    <a class="btn btn-secondary" href="/drones/new" role="button">New Drone</a>
  </div>
  <table class="table table-sm" style='margin-top: 10px'>
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Colour</th>
        <th scope="col">Created At</th>
        <th scope="col">Updated At</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @drones.present? %>
        <% @drones.each do |drone| %>
          <tr>
            <td><%= drone.name %></td>
            <td><%= drone.colour %></td>
            <td><%= drone.created_at %></td>
            <td><%= drone.updated_at %></td>
            <td><%= drone.status %></td>
            <td>
              <%= link_to "Edit", edit_drone_path(drone), class: "btn btn-secondary btn-sm" %>
              <%= link_to "Delete", drone_path(drone), method: 'delete', class: "btn btn-secondary btn-sm" %>
            </td>
          </tr>      
        <% end %>
      <% else %>
        <tr>
          <td>No Records Found</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
